<%= render "shared/header" %>
    <div class="container">
        <%= render "shared/left-dashboard" %>
            <div class="col-md-9">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:">Quản lý bài viết</a></li>
                    <li class="breadcrumb-item"><a href="/post/new">Tạo bài viết mới</a></li>
                </ol>
                <h2>Tạo bài viết mới</h2>
                <% if @post.errors.any? %>
                <div class="alert alert-danger">
                    
                        <% @post.errors.full_messages.each do |message| %>
                        <p><%= message %></p>
                        <% end %>
                <% end %>
                 <%= form_with scope: :post,url: post_index_path do |f| %>
                    
                    <fieldset>
                        <div class="form-group">
                            <label>Title</label>
                            <br>
                            <%= f.text_field :title, class: "form-control" %>
                                <div id="title-alert"></div>
                        </div>
                        <div class="form-group">
                            <label>Thumbnail</label>
                            <br>
                            <%= f.file_field :thumbnail, class: "form-control",id: "thumbnail" %>
                            <div id="thumbnail-alert"></div>

                        </div>
                        <div class="form-group">
                            <label>Content</label>
                            <br>
                            <div id="compose">
                            <%= f.text_area :content, style: "display: none;"%>
                                <div id="content-alert"></div>
                            </div>
                        </div>

                        <!-- Change this to a button or input when using this as a form -->
                        <input type="submit" class="btn btn-primary" id="post" name="btnLogin" value="Submit">
                    </fieldset>
                    <%end%>
                    
            </div>
            
    </div>
    <%= render "shared/footer" %>